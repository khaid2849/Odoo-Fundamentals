<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="QLBH_FormStatusIndicator" t-inherit="web.FormStatusIndicator" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_form_status_indicator_buttons')]" position="attributes">
            <attribute name="class">o_form_status_indicator_buttons d-flex ms-1</attribute>
        </xpath>
        <xpath expr="//button[hasclass('o_form_button_save')]" position="replace">
            <button
                    type="button"
                    class="o_form_button_save btn btn-light btn-outline-primary py-0"
                    t-att-disabled="props.isDisabled"
                    data-hotkey="s"
                    t-on-click.stop="save"
                    data-tooltip="Save manually"
                    aria-label="Save manually">
                    Save
                </button>
        </xpath>
        <xpath expr="//button[hasclass('o_form_button_cancel')]" position="replace">
            <button
                    type="button"
                    class="o_form_button_cancel ms-2 btn btn-outline-danger py-0"
                    t-att-disabled="props.isDisabled"
                    data-hotkey="j"
                    t-on-click.stop="discard"
                    data-tooltip="Discard changes"
                    aria-label="Discard changes">
                    Discard
                </button>
        </xpath>
    </t>

</templates>