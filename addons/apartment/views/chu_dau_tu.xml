<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_apartment_chu_dau_tu_tree" model="ir.ui.view">
        <field name="name">apartment.chu.dau.tu.tree</field>
        <field name="model">apartment.chu.dau.tu</field>
        <field name="arch" type="xml">
            <tree string="Danh mục chủ đầu tư" class="text-center">
                <field name="ma" string="Mã" />
                <field name="loai_dinh_danh" string="Loại định danh" optional="show" />
                <field name="ma_dinh_danh" string="Mã định danh" />
                <field name="name" string="Tên" />
                <field name="so_dien_thoai" string="Số điện thoại" optional="show" />
                <field name="email" string="Email" optional="show" />
                <field name="dia_chi" string="Địa chỉ" optional="show" />
            </tree>
        </field>
    </record>

    <record id="view_apartment_chu_dau_tu_form" model="ir.ui.view">
        <field name="name">apartment.chu.dau.tu.form</field>
        <field name="model">apartment.chu.dau.tu</field>
        <field name="arch" type="xml">
            <form>
                <link rel="stylesheet" href="/apartment/static/src/css/chu_dau_tu.css"></link>
                <sheet>
                    <group string="Thông tin chủ đầu tư">
                        <group>
                            <label for="loai_dinh_danh" string="Loại định danh" class="required" />
                            <div>
                                <field name="loai_dinh_danh" string="Loại định danh" decoration-bf="1" />
                            </div>
                            <label for="name" string="Tên" class="required custom-input" decoration-bf="1" />
                            <div>
                                <field name="name" string="Tên" />
                            </div>
                            <label for="email" string="Email" class="required" />
                            <div>
                                <field name="email" string="Email" />
                            </div>

                        </group>
                        <group>
                            <label for="ma_dinh_danh" string="Mã định danh" class="required" />
                            <div>
                                <field name="ma_dinh_danh" string="Mã định danh" />
                            </div>
                            <label for="so_dien_thoai" string="Số điện thoại" class="required" />
                            <div>
                                <field name="so_dien_thoai" string="Số điện thoại" />
                            </div>
                            <label for="dia_chi" string="Địa chỉ" class="required fw-bold" />
                            <field name="dia_chi" invisible="1" />
                            <div class="o_address_format">
                                <field class="o_address_state" name="quoc_gia" placeholder="Quốc gia" options="{'no_create_edit': True}" />
                                <field class="o_address_state" name="tinh" placeholder="Tỉnh" domain="[('country_id', '=', quoc_gia)]" options="{'no_create_edit': True}" />
                                <field class="o_address_state" name="quan" placeholder="Quận(Huyện)" domain="[('state_id', '=', tinh)]" options="{'no_create_edit': True}" />
                                <field class="o_address_state" name="phuong" placeholder="Phường(Xã)" domain="[('district_id', '=', quan)]" options="{'no_create_edit': True}" />
                                <field class="o_address_street" name="duong" placeholder="Đường" />
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label for="nguoi_dai_dien" string=" Người đại diện" class=" required" />
                            <div>
                                <field name="nguoi_dai_dien" string=" Người đại diện" />
                            </div>
                        </group>
                        <group>
                            <label for="chuc_vu" string="Chức vụ" class="required" />
                            <div>
                                <field name="chuc_vu" string="Chức vụ" />
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="ghi_chu" string="Ghi chú" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_apartment_chu_dau_tu" model="ir.actions.act_window">
        <field name="name">Danh mục chủ đầu tư</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">apartment.chu.dau.tu</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="menu_chu_dau_tu" model="ir.ui.menu">
        <field name="name">Danh mục chủ đầu tư</field>
        <field name="parent_id" ref="menu_quan_ly_danh_muc_root" />
        <field name="action" ref="action_apartment_chu_dau_tu" />
        <field name="sequence" eval="3" />
    </record>


</odoo>