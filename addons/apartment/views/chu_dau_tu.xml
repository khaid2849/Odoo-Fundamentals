<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_apartment_chu_dau_tu_tree" model="ir.ui.view">
        <field name="name">apartment.chu.dau.tu.tree</field>
        <field name="model">apartment.chu.dau.tu</field>
        <field name="arch" type="xml">
            <tree string="Danh mục chủ đầu tư" class="text-center">
                <field name="code" string="Mã" readonly="1"/>
                <field name="identifier_type" string="Loại định danh" optional="show"/>
                <field name="identifier" string="Mã định danh"/>
                <field name="name" string="Tên"/>
                <field name="phone" string="Số điện thoại" optional="show"/>
                <field name="email" string="Email" optional="show"/>
                <field name="address" string="Địa chỉ" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_apartment_chu_dau_tu_form" model="ir.ui.view">
        <field name="name">apartment.chu.dau.tu.form</field>
        <field name="model">apartment.chu.dau.tu</field>
        <field name="arch" type="xml">
            <form>
                <link rel="stylesheet" href="/apartment/static/src/css/apartment.css"></link>
                <sheet>
                    <group string="Thông tin chủ đầu tư">
                        <group>
                            <label for="identifier_type" string="Loại định danh" class="required"/>
                            <div>
                                <field name="identifier_type" string="Loại định danh" decoration-bf="1"/>
                            </div>
                            <label for="name" string="Tên" class="required custom-input" decoration-bf="1"/>
                            <div>
                                <field name="name" string="Tên"/>
                            </div>
                            <label for="email" string="Email" class="required"/>
                            <div>
                                <field name="email" string="Email"/>
                            </div>

                        </group>
                        <group>
                            <label for="identifier" string="Mã định danh" class="required"/>
                            <div>
                                <field name="identifier" string="Mã định danh"/>
                            </div>
                            <label for="phone" string="Số điện thoại" class="required"/>
                            <div>
                                <field name="phone" string="Số điện thoại"/>
                            </div>
                            <label for="address" string="Địa chỉ" class="required fw-bold"/>
                            <field name="address" invisible="1"/>
                            <div class="o_address_format">
                                <field class="o_address_state" name="country" placeholder="Quốc gia"
                                       options="{'no_create_edit': True}"/>
                                <field class="o_address_state" name="state" placeholder="Tỉnh"
                                       domain="[('country_id', '=', country)]" options="{'no_create_edit': True}"/>
                                <field class="o_address_state" name="district" placeholder="Quận(Huyện)"
                                       domain="[('state_id', '=', state)]" options="{'no_create_edit': True}"/>
                                <field class="o_address_state" name="ward" placeholder="Phường(Xã)"
                                       domain="[('district_id', '=', district)]" options="{'no_create_edit': True}"/>
                                <field class="o_address_street" name="street" placeholder="Đường"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label for="representative" string=" Người đại diện" class=" required"/>
                            <div>
                                <field name="representative" string=" Người đại diện"/>
                            </div>
                        </group>
                        <group>
                            <label for="position" string="Chức vụ"/>
                            <div>
                                <field name="position" string="Chức vụ"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <label for="description" string="Ghi chú" class="label"/>
                        <div>
                            <field name="description" nolabel="1"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_apartment_search" model="ir.ui.view">
        <field name="name">apartment.chu.dau.tu.search</field>
        <field name="model">apartment.chu.dau.tu</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" string="Mã"/>
                <field name="identifier" string="Mã định danh"/>
                <field name="name" string="Tên"/>
                <field name="phone" string="Số điện thoại"/>
                <field name="email" string="Email"/>

                <filter string="Đã lưu trữ" name="active" domain="[('active','=',False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Ngày tạo" name="create_date" domain="" context="{'group_by': 'create_date'}"/>
                    <filter string="Người tạo" name="create_uid" domain="" context="{'group_by':'create_uid'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="seq_chu_dau_tu_code" model="ir.sequence">
        <field name="name">Mã chủ đầu tư</field>
        <field name="code">apartment.chu.dau.tu.sequence</field>
        <field name="prefix">DT</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
    </record>

    <record id="action_apartment_chu_dau_tu" model="ir.actions.act_window">
        <field name="name">Danh mục chủ đầu tư</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">apartment.chu.dau.tu</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="menu_chu_dau_tu" model="ir.ui.menu">
        <field name="name">Danh mục chủ đầu tư</field>
        <field name="parent_id" ref="menu_quan_ly_danh_muc_root"/>
        <field name="action" ref="action_apartment_chu_dau_tu"/>
        <field name="sequence" eval="3"/>
    </record>

</odoo>