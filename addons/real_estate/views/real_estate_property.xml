<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_real_estate_property_form" model="ir.ui.view">
        <field name="name">real.estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                      <group>
                        <field name="name" string="Property's Name"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'no_create':True}"/> 
                        <field name="property_type_id" string="Property Type"/>
                        <field name="postcode" string="Postcode"/>
                      </group>
                      <group>
                        <field name="date_availability" string="Date Availability"/>
                        <field name="expected_price" string="Expected Price"/>
                        <field name="selling_price" string="Selling Price"/>
                      </group>
                      <notebook>
                        <page string="Details">
                          <group>                          
                            <field name="bedrooms" string="Bedrooms"/>
                            <field name="living_area" string="Living Area"/>
                            <field name="facades" string="Facades"/>
                            <field name="garage" string="Garage"/>
                            <field name="garden" string="Garden"/>
                            <field name="garden_area" string="Garden Area"/>
                            <field name="garden_orientation" string="Garden Orientation"/>
                            <field name="state" string="State"/>
                          </group>
                        </page>
                        <page string="Offer">
                            <group>
                                <field name="offer_ids" mode="tree" string="Offer"/>
                                <!-- <tree string="Offers">
                                    <field name="price" string="Price"/>
                                    <field name="status" string="Status"/>
                                    <field name="partner_id" string="Partner"/>
                                </tree> -->
                            </group>    
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="seller" string="Salesman"/>
                                <field name="buyer" string="Buyer"/>
                            </group>
                        </page>
                      </notebook>
                    </group>    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_real_estate_property_tree" model="ir.ui.view">
        <field name="name">real.estate.property.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Property's Name"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="living_area" string="Living Area"/>
                <field name="date_availability" string="Date Availability"/>
                <field name="garden_orientation" string="Garden's Orientation"/>
                <!-- <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="state"/>
                <field name="active"/> -->
            </tree>
        </field>
    </record>

    <record id="view_real_estate_property_search" model="ir.ui.view">
        <field name="name">real.estate.property.search</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="Property's Name"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="facades" string="Facades"/>

                <filter string="Available" name="active" domain="[('active','=',False)]"/>
                <filter string="Garden's Orientation North" name="garden_orientation_north" domain="[('garden_orientation','=','north')]"/>
                <filter string="Garden's Orientation South" name="garden_orientation_south" domain="[('garden_orientation','=','south')]"/>
                <filter string="Garden's Orientation East" name="garden_orientation_east" domain="[('garden_orientation','=','east')]"/>
                <filter string="Garden's Orientation West" name="garden_orientation_west" domain="[('garden_orientation','=','west')]"/>

                <group expand="0" string="Group By"> 
                    <filter string="Postcode" name="postcode" domain="" context="{'group_by': 'postcode'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="action_real_estate_property" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id = "menu_real_estate_property" name="Properties" parent="menu_real_estate_root" action="action_real_estate_property" sequence="10" />
</odoo>